{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "ESnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"]
  },
  "strict": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
    "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
